<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>User Details</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
    {% block body %}
    <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/bank_branches/add">Add Bank Branch</a></li>
        <li><a href="/bank_branches">List Bank Branches</a></li>
        <li><a href="/users">List Users Bank Branches</a></li>
        <li><a href="/stats">Stats Bank Branches</a></li>
    </ul>
        <caption style="text-align:left"><b>Wire Transfer</b></caption>
        {{ form(form) }}
        <br/>
        <br/>
        {% for label, messages in app.flashes(['success', 'error']) %}
            {% for message in messages %}
                <div class="flash-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        <br/>
        <br/>
        <table>
            <caption style="text-align:left"><b>User Details From</b></caption>
            <tr>
                <td>Name</td>
                <td>Balance</td>
                <td>Bank Branch Name</td>
                <td>Bank Branch Location</td>
                <td>Option</td>
            </tr>
            <tr>
                <td>{{ userFrom.user_name }}</td>
                <td>{{ userFrom.user_balance }}</td>
                <td>{{ userFrom.bank_branch_name }}</td>
                <td>{{ userFrom.bank_branch_location }}</td>
            </tr>
        </table>
        <br/>
        <br/>
        {% if userTo %}
        <table>
            <caption style="text-align:left"><b>User Details To</b></caption>
            <tr>
                <td>Name</td>
                <td>Balance</td>
                <td>Bank Branch Name</td>
                <td>Bank Branch Location</td>
                <td>Option</td>
            </tr>
            <tr>
                <td>{{ userTo.user_name }}</td>
                <td>{{ userTo.user_balance }}</td>
                <td>{{ userTo.bank_branch_name }}</td>
                <td>{{ userTo.bank_branch_location }}</td>
            </tr>
        </table>
        {% endif %}
    {% endblock %}
</body>
</html>
