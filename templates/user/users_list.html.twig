<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Users Bank Branches</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
    {% block body %}
    <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/bank_branches/add">Add Bank Branch</a></li>
        <li><a href="/bank_branches">List Bank Branches</a></li>
        <li><a href="/users">List Users Bank Branches</a></li>
    </ul>
    <table>
        <tr>
            <td>user name</td>
            <td>user balance</td>
            <td>bank branch name</td>
            <td>bank branch location</td>
            <td>option</td>
        </tr>
        {% for item in items %}
            <tr>
                <td>{{ item.user_name }}</td>
                <td>{{ item.user_balance }}</td>
                <td>{{ item.bank_branch_name }}</td>
                <td>{{ item.bank_branch_location }}</td>
                <td><a href="/users/{{item.user_id}}">Show User details</a></td>
            </tr>
        {% endfor %}
    </table>
    {% endblock %}
</body>
</html>
