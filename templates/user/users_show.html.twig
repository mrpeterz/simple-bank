<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>User Details</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
    {% block body %}
    <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/bank_branches/add">Add Bank Branch</a></li>
        <li><a href="/bank_branches">List Bank Branches</a></li>
        <li><a href="/users">List Users Bank Branches</a></li>
        <li><a href="/stats">Stats Bank Branches</a></li>
    </ul>
    <table>
        <caption style="text-align:left"><b>User Details</b></caption>
        <tr>
            <td>Name</td>
            <td>Balance</td>
            <td>Bank Branch Name</td>
            <td>Bank Branch Location</td>
            <td>Option</td>
        </tr>
        <tr>
            <td>{{ item.user_name }}</td>
            <td>{{ item.user_balance }}</td>
            <td>{{ item.bank_branch_name }}</td>
            <td>{{ item.bank_branch_location }}</td>
            <td><a href="/users/wire_transfer/{{item.user_id}}">Wire Transfer</a></td>
        </tr>
    </table>
    {% endblock %}
</body>
</html>
