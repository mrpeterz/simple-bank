<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>List Bank Branches</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
    {% block body %}
    <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/bank_branches/add">Add Bank Branch</a></li>
        <li><a href="/bank_branches">List Bank Branches</a></li>
        <li><a href="/users">List Users Bank Branches</a></li>
    </ul>
    <table>
        <tr>
            <td>name</td>
            <td>location</td>
            <td>option</td>
        </tr>
        {% for bankBranch in bankBranches %}
            <tr>
                <td>{{ bankBranch.name }}</td>
                <td>{{ bankBranch.location }}</td>
                <td><a href="users/bank_branches/{{bankBranch.id}}">Add User</a></td>
            </tr>
        {% endfor %}
    </table>
    {% endblock %}
</body>
</html>
