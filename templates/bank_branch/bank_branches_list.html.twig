<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>List Bank Branches</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
    {% block body %}
    <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/bank_branches/add">Add Bank Branch</a></li>
        <li><a href="/bank_branches">List Bank Branches</a></li>
        <li><a href="/users">List Users Bank Branches</a></li>
        <li><a href="/stats">Stats Bank Branches</a></li>
    </ul>
    <table>
        <caption style="text-align:left"><b>List Bank Branches</b></caption>
        <tr>
            <td>Name</td>
            <td>Location</td>
            <td>Option</td>
        </tr>
        {% for item in items %}
            <tr>
                <td>{{ item.bank_branch_name }}</td>
                <td>{{ item.bank_branch_location }}</td>
                <td><a href="users/bank_branches/{{item.bank_branch_id}}">Add User</a></td>
            </tr>
        {% endfor %}
    </table>
    {% endblock %}
</body>
</html>
